{
  "name": "remix-template-remix-ts",
  "private": true,
  "description": "",
  "license": "",
  "sideEffects": false,
  "scripts": {
    "build": "concurrently \"npm run sass\" \"remix build\"",
    "dev": "concurrently \"npm run sass:dev\" \"remix dev\"",
    "start": "set PORT=7001 && remix-serve build",
    "sass:dev": "sass --watch --no-source-map --style compressed app/:app/",
    "sass": "sass --no-source-map --style compressed app/:app/"
  },
  "dependencies": {
    "@remix-run/node": "^1.6.0",
    "@remix-run/react": "^1.6.0",
    "@remix-run/serve": "^1.6.0",
    "@vant/touch-emulator": "^1.3.2",
    "clsx": "^1.1.1",
    "copy-to-clipboard": "^3.3.1",
    "immer": "^9.0.15",
    "react": "^18.2.0",
    "react-cool-virtual": "^0.7.0",
    "react-dom": "^18.2.0",
    "react-vant": "2.0.0-alpha.26",
    "use-immer": "^0.7.0"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.6.0",
    "@remix-run/eslint-config": "^1.6.0",
    "@types/react": "^17.0.43",
    "@types/react-dom": "^17.0.9",
    "concurrently": "^7.2.2",
    "eslint": "^8.17.0",
    "sass": "^1.52.3",
    "typescript": "^4.7.3"
  },
  "engines": {
    "node": ">=14"
  }
}
